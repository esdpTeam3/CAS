@model CAStest.Models.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="UserList" asp-controller="User" title="Назад" style="position:relative; top:25px"><img src='~/images/material/back.png' alt="Назад" class='icon2'></a>
<br />

<h2>Пользователь</h2>
<h4>Изменение пользователя</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fullname" class="control-label">Имя</label>
                <br />
                <input asp-for="Fullname" id="registerInput" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePassword" class="control-label">Дата следующего изменения пароля</label>
                <br />
                <input asp-for="DatePassword" id="registerInput" />
                <span asp-validation-for="DatePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label">Логин</label>
                <br />
                <input asp-for="Login" id="registerInput" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <br />
                <input asp-for="Password" id="registerInput" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" style="border:1px solid #CA0039; border-radius:0px; color:#CA0039 " />
            </div>
        </form>
    </div>
</div>

