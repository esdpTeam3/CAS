@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Вход";
}

<h2>Авторизация</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="Авторизация" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login">Логин</label>
                    <br />
                    <input asp-for="Login" id="registerInput" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <br />
                    <input asp-for="Password" id="registerInput" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            Запомнить меня
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" style="border:1px solid #CA0039; border-radius:0px; color:#CA0039 ">Вход</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">Забыли пароль?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
