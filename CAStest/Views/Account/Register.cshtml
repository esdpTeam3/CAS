@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<a asp-action="UserList" asp-controller="User" title="Назад" style="position:relative; top:25px"><img src='~/images/material/back.png' alt="Назад" class='icon2'></a>
<br />

<h2>Регистрация нового пользователя</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Создание аккаунта.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login">Логин</label>
                <br />
                <input asp-for="Login" id="registerInput" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName">Имя</label>
                <br />
                <input asp-for="FullName" id="registerInput" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <br />
                <input asp-for="Email" id="registerInput" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <br />
                <input asp-for="Password" id="registerInput" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Подтвердите пароль</label>
                <br />
                <input asp-for="ConfirmPassword" id="registerInput" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePassword" class="control-label">Дата следующего изменения пароля</label>
                <br />
                <input asp-for="DatePassword.Date" id="registerInput" />
                <span asp-validation-for="DatePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordNotifications">Период за который вы хотите получать уведомления о смене пароля(укажите в днях)</label>
                <br />
                <input asp-for="PasswordNotifications" id="registerInput" />
                <span asp-validation-for="PasswordNotifications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractNotifications">
                    Период за который вы хотите получать уведомления о событиях,
                    связанных с теми договорами которые вы отслеживаете(укажите в днях)
                </label>
                <br />
                <input asp-for="ContractNotifications" id="registerInput" />
                <span asp-validation-for="ContractNotifications" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default" style="border:1px solid #CA0039; border-radius:0px; color:#CA0039 ">Регистрация</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
