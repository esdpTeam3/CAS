@model CAStest.Models.GroupUserViewModel.CreateUserGroupViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            
        <div>
            <select id="Id" multiple="multiple" required name="model.Uses">
                @if (ViewBag.Users != null)
                {
                    foreach (var item in ViewBag.Users)
                    {
                       <option value="@item.Id">
                                @item.UserName
                            </option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
        </form>
    </div>
    </div>

